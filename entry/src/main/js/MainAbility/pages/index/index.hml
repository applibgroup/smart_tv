    <!-- xxx.hml -->
        <div class="tab-container">
            <tabs class = "tabs" index="0" vertical="false" onchange="change">
                <tab-bar class="tab-bar" mode="fixed">
                    <text class="txt">Movies</text>
                    <text class="txt">TV Shows</text>
                    <text class="txt">Series</text>
                    <text class="txt">Sports</text>
                    <text class="txt">Kids</text>
                    <text class="txt">News</text>
                </tab-bar>
                <tab-content class="tabcontent" scrollable="true">
                    <div class="item-content" >
                        <div class="sec1">
                            <div class="sec1_title">
                                <text>Action Movies</text>
                            </div>
                            <div class="slides">
                                <image src="common/images/action_poster_1.png"></image>
                                <image src="common/images/action_poster_2.png"></image>
                                <image src="common/images/action_poster_3.png"></image>
                                <image src="common/images/action_poster_4.png"></image>
                                <image src="common/images/action_poster_5.png"></image>
                            </div>
                        </div>


                        <div class="sec1">
                            <div class="sec1_title">
                                <text>Animated Movies</text>
                            </div>
                            <div class="slides">
                                <image src="common/images/animate_poster_1.png"></image>
                                <image src="common/images/animate_poster_2.png"></image>
                                <image src="common/images/animate_poster_3.png"></image>
                                <image src="common/images/animate_poster_4.png"></image>
                                <image src="common/images/animate_poster_5.png"></image>
                            </div>
                        </div>
                    </div>
                    <div class="item-content" >
                        <text class="item-title">TV Shows screen</text>
                    </div>
                    <div class="item-content" >
                        <text class="item-title">Series screen</text>
                    </div>
                    <div class="item-content" >
                        <text class="item-title">Sports screen</text>
                    </div>
                    <div class="item-content" >
                        <text class="item-title">Kids screen</text>
                    </div>
                    <div class="item-content" >
                        <text class="item-title">News screen</text>
                    </div>
                </tab-content>
            </tabs>
        </div>



    </div>

</div>
